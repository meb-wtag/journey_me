<div class="main">
  <div class="main-header">
    <div>
      <div class="profile-pic-wrapper">
        <div class="pic-holder">
          <% if @user.profile_picture.attached? %>
            <image src="<%= url_for(@user.profile_picture) %>" alt="avatar"
            class="rounded-circle img-fluid" style="width: 150px;">
          <% else %>
            <image src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp" alt="avatar"
            class="rounded-circle img-fluid" style="width: 150px;">
          <% end %>
          <label for="newProfilePhoto" class="upload-file-block">
            <div class="text-center">
              <div>
                <i class="fa fa-camera fa-2x"></i>
              </div>
              <div>
                <%= t('profile_picture.update') %> <br /> <%= t('profile_picture.profile_picture') %>
              </div>
              <Input class="uploadProfileInput" type="file" name="profile_pic" id="newProfilePhoto" accept="image/*" style="opacity: 0;" />
            </div>
          </label>
        </div>
      </div>
      <h5><%= @user.username %></h5>
      <p><%= @user.description %></p>
      <p><%= @user.country %> <%= @user.city %></p>
      <div>
        <%= link_to t('profile.edit'), edit_user_path(@user), class: "btn btn-primary"%>
      </div>
      <% if current_user == @user %>
        <div>
          <%= link_to t('user_session.action.delete'), logout_path, class: "btn btn-danger", data: {
                turbo_method: :delete,
                turbo_confirm: t('user.message.confirm')
              } %>
        </div>
      <% else %>
        <div>
          <%= link_to t('user.action.delete'), user_path(@user), class: "btn btn-danger", data: {
                turbo_method: :delete,
                turbo_confirm: t('user.message.confirm')
              } %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="main-content">
  </div>
</div>
<div class="information">
  <div class="description">
    <div class="item-title">
      <h3><%= t('journal.table.description') %></h3>
    </div>
    <div class="description-content">
    </div>
  </div>
</div>

