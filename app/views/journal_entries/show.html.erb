<%= simple_form_for([@user, @journal, @journal_entry], wrapper: :horizontal_form) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title, {class: "form-control"} %>
    <%= f.rich_text_area :content, as: :text %>
  </div>

  <div>
    <h1>
      Goals:
    </h1>
    <% @journal_entry.goals.each do |goal| %>
      <div class="card">
        <%= goal.title %>
      </div>
    <% end %>
    <div>
      <%= link_to new_user_journal_journal_entry_goal_path(@user, @journal, @journal_entry) do %>
        <img src="<%= asset_path('add_entry.svg') %>" class="magnetic" alt="Add Entry">
      <% end %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
