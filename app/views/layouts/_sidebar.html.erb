<div class="s-body">
  <div class="s-item"> <!-- Tasks -->
    <div class="item-title">  <!-- title -->
      <h3>Journals</h3>
      <div>
        <%= link_to new_user_journal_path(@user) do %>
          <img src="<%= asset_path('add_entry.svg') %>" alt="Add Entry" class="magnetic" style="width: 25px; height: 25px;"></img>
        <% end %>
      </div>
    </div>
    <hr style="margin:2%;">
    <div class="item-cards"> <!-- cards -->
      <% @user.journals.each do |journal| %>
        <div class="card">
          <a href="<%= user_journal_path(@user, journal) %>" class="card-link">
            <div class="card-content">
              <div class="card-logo">
                <!-- Icon -->
              </div>
              <div class="card-title">
                <%= journal.title %>
              </div>
            </div>
          </a>
        </div>
      <% end %>
    </div>
  </div>
  <div class="s-item"> <!-- Tasks -->
    <div class="item-title">  <!-- title -->
      <h3>Tasks</h3>
      <div>
        <%= link_to new_user_task_path(@user) do %>
          <img src="<%= asset_path('add_entry.svg') %>" alt="Add Entry" class="magnetic" style="width: 25px; height: 25px;"></img>
        <% end %>
      </div>
    </div>
    <hr style="margin:2%;">
    <div class="item-cards"> <!-- cards -->
      <% @user.tasks.each do |task| %>
        <div class="card">
          <a href="<%= user_task_path(@user, task) %>" class="card-link">
            <div class="card-content">
              <div class="card-logo">
                <!-- Icon -->
              </div>
              <div class="card-title">
                <%= task.title %>
              </div>
            </div>
          </a>
        </div>
      <% end %>
    </div>
  </div>
</div>
