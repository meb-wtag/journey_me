<div class="s-body">
  <div class="s-item">
    <div class="item-title">
      <h3><%= t('journal.journals') %></h3>
      <div>
        <%= link_to new_user_journal_path(current_user) do %>
          <img src="<%= asset_path('add_entry.svg') %>" alt="Add Entry" class="magnetic">
        <% end %>
      </div>
    </div>
    <hr>
    <div class="item-cards">
      <% current_user.journals.each do |journal| %>
        <div class="card">
          <a href="<%= user_journal_path(current_user, journal) %>" class="card-link">
            <div class="card-content">
              <div class="card-logo">
                <!-- Icon -->
              </div>
              <div class="card-title">
                <%= journal.title %>
              </div>
            </div>
          </a>
        </div>
      <% end %>
    </div>
  </div>
  <div class="s-item">
    <div class="item-title">
      <h3><%= t('task.tasks') %></h3>
      <div>
        <%= link_to new_user_task_path(current_user) do %>
          <img src="<%= asset_path('add_entry.svg') %>" alt="Add Entry" class="magnetic">
        <% end %>
      </div>
    </div>
    <hr>
    <div class="item-cards">
      <% current_user.tasks.each do |task| %>
        <div class="card">
          <a href="<%= user_task_path(current_user, task) %>" class="card-link">
            <div class="card-content">
              <div class="card-logo">
                <!-- Icon -->
              </div>
              <div class="card-title">
                <%= task.title %>
              </div>
            </div>
          </a>
        </div>
      <% end %>
    </div>
  </div>
</div>
