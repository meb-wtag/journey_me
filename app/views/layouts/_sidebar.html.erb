<div class="s-body">
  <div class="s-item"> <!-- Journals -->
    <div class="item-title">  <!-- title -->
      <div>
        <h1>Journals</h1>
        <!-- Icon -->
      </div>
      <hr style="border-width: 5px">
    </div>
    <div class="item-cards"> <!-- cards -->
      <% @user.journals.each do |journal| %>
        <div class="card">
          <div class="card-logo">
            <!-- Icon -->
          </div>
          <div class="card-title">
            <h2>Card title</h2>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="s-item"> <!-- Tasks -->
  <div class="item-title">  <!-- title -->
    <div>
      <h1>Tasks</h1>
      <!-- Icon -->
    </div>
    <hr style="border-width: 5px">
  </div>
  <div class="item-cards"> <!-- cards -->
    <% @user.journals.each do |task| %>
      <div class="card">
        <div class="card-logo">
          <!-- Icon -->
        </div>
        <div class="card-title">
          <h2>Card title</h2>
        </div>
      </div>
    <% end %>
  </div>
</div>


