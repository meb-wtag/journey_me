<div style="display: flex; flex-direction: column;">
  <div style="margin-top: 30px;">
    <%  @journals.each do |journal| %>
      <div class="card">
        <a href="<%= user_journal_path(current_user, journal) %>" class="card-link">
          <div class="card-content">
            <div class="card-logo">
              <!-- Icon -->
            </div>
            <div class="card-title">
              <%= journal.title %>
            </div>
          </div>
        </a>
      </div>
    <% end %>
  </div>
    <%  @entries.each do |entry| %>
      <div class="card">
        <div class="card-content">
          <div class="card-logo">
            <!-- Icon -->
          </div>
          <div class="card-title">
            <%= entry.title %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
